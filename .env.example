# ==================== 基础配置 ====================
# 应用密钥（生产环境必须修改）
SECRET_KEY=your-secret-key-here

# 服务信息
SERVICE_NAME=unified-flask-service
VERSION=1.0.0
ENVIRONMENT=development

# 服务器配置
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True
FLASK_ENV=development

# ==================== 千帆API配置 ====================
# 千帆API密钥
QIANFAN_API_KEY=bce-v3/your-api-key-here

# 千帆API端点
QIANFAN_BASE_URL=https://qianfan.baidubce.com/v2

# 千帆模型
QIANFAN_MODEL=irag-1.0

# 千帆API超时时间（秒）
QIANFAN_TIMEOUT=60

# 千帆API最大重试次数
QIANFAN_MAX_RETRIES=3

# ==================== 数据库配置 ====================
# MySQL默认字符集
MYSQL_DEFAULT_CHARSET=utf8mb4

# MySQL默认端口
MYSQL_DEFAULT_PORT=3306

# MySQL连接超时时间（秒）
MYSQL_CONNECTION_TIMEOUT=30

# ==================== 日志配置 ====================
# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 日志格式
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 日志文件路径（可选，不设置则只输出到控制台）
# LOG_FILE=logs/app.log

# ==================== 安全配置 ====================
# CORS允许的源（逗号分隔）
CORS_ORIGINS=*

# API频率限制
API_RATE_LIMIT=100/hour

# 最大请求内容长度（字节）
MAX_CONTENT_LENGTH=16777216
